<div class="container">
        <h1 class=" font-effect-shadow-multiple title-responsive"> Let's play Chess!</h1>
        <div class = "row">
            <div class="col-sm-12 col-md-3 margin-responsive text-center" id="left-image">
                <img src="./assets/image (1).png" class="img-fluid img-responsive" alt="Responsive image">
            </div>        
            <div class = "col-sm-12 col-md-4 offset-md-1" id="form">
                <form id="login-form" class="rounded">
                    <h2>Log In</h2>

                    <label for="emaillogin" class="form-label">Email address</label>
                    <input type="text" class="form-control" id="email-login" placeholder = "email">

                    <label for="passwordlogin" class="form-label">Password</label>
                    <input type="text" class="form-control mb-2" id="password-login" placeholder ="password">

                    <button type="submit" class="btn btn-primary btn-lg btn-block">Log In</button>
                </form>
                <form id="signup-form">
                    <h2>Sign Up</h2>

                    <label for="emailsignup" class="form-label">Email address</label>
                    <input type="text" class="form-control" id="email-signup" placeholder = "email">

                    <label for="usernamesignup" class="form-label">User name</label>
                    <input type="text" class="form-control" id="username-signup" placeholder = "username">

                    <label for="passwordsignup" class="form-label">Password</label>
                    <input type="text" class="form-control mb-2" id="password-signup" placeholder ="password">

                    <button type="submit" class="btn btn-primary btn-lg btn-block">Sign Up</button>
                </form>
            </div>
            <div class="col-sm-12 col-md-3 margin-responsive text-center offset-md-1" id="right-image">
                <img src="./assets/image.png" class="img-fluid img-responsive" alt="Responsive image">
            </div>
        </div>
    </div>
<script src="../public/js/"></script>
