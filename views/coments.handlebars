{{> header/header-block-loggedIn}}
<div>
    {{#each posts as |userPost|}}
    <div class="text-center card text-white bg-success mt-5 mb-3 rounded" id="card-posts" style="width: 70%;">
        <div class="card-header">
            <a href='/single/post/{{userPost.id}}'><h2 class="card-title">{{userPost.name}}</h2></a>
        </div>
        <div class="card-body">
            <p class="card-text text-justify bg-transparent">{{userPost.description}}</p>
        </div>
        <div class="card-footer">
            <h6 class="text-right font-italic">{{userPost.createdAt}}</h6>
        </div>
        <div class="card border-success mt-5" id="into-card" style="width: 100%;">
            <div class="card-header bg-transparent border-success">
                <h5 class="text-left font-italic">Comment:</h5>
            </div>
        <form class= "mt-3" id="create-comment-form">
                </div>
                <input id='post-comment' placeholder='leave a comment' type='text' />
                <h6 class="text-right font-italic"> Created by: {{username.createdAt}}</h6>
                <a style="width: 30%;" typ="submit" id="my-comment" class="btn btn-primary btn-lg btn-block mt-3 mb-3" font-weight-bolder mb-2" href="dashboard/{{userPost.id}}">Comment this post</a>
            </div>

        </form>
        {{/each}}
    </div>